<section class="body-bg min-h-screen pt-8 md:pt-9 pb-6 px-2 md:px-0" style="font-family: 'Lato', sans-serif">
  <header class="max-w-lg mx-auto">
    <a href="#">
      <h1 class="text-4xl font-bold text-white text-center text-uppercase">application</h1>
    </a>
  </header>

  <main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
    <section class="text-center">
      <h3 class="font-bold text-2xl">Welcome to my app</h3>
      <p class="text-gray-600 pt-2">Create an account.</p>
      <% if (message) { %>
      <p class="text-red-500"><%= message %></p>
      <% } %>
    </section>

    <section class="mt-10">
      <form class="flex flex-col" method="POST" action="/register">
        <div class="mb-6 pt-3 rounded">
          <label class="block text-sm font-bold mb-2 ml-3" for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="rounded w-full bg-gray-300/50 focus:outline-none transition duration-300 focus:ring-cyan-600 focus:ring-0 ring-2 p-3"
          />
        </div>
        <div class="mb-6 pt-3">
          <label class="block text-sm font-bold mb-2 ml-3" for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="rounded w-full bg-gray-300/50 focus:outline-none transition duration-300 ring-teal-600/50 focus:ring-0 ring-2 p-3"
          />
        </div>
        <div class="mb-6 pt-3">
          <label class="block text-sm font-bold mb-2 ml-3" for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="rounded w-full bg-gray-300/50 focus:outline-none transition duration-300 ring-amber-600 focus:ring-0 ring-2 p-3"
          />
        </div>
        <button
          class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200"
          type="submit"
        >
          Register
        </button>
      </form>
    </section>
    <div class="social-login">
      <a href="#" class="shadow hover:shadow-blue-500/50 transition duration-500"
        ><i class="fab fa-facebook"></i
      ></a>
      <a href="#" class="shadow hover:shadow-red-500/50 transition duration-500"><i class="fab fa-google"></i></a>
      <a href="//github.com/topujss" class="shadow hover:shadow-cyan-500/50 transition duration-500"
        ><i class="fab fa-github"></i
      ></a>
    </div>
  </main>

  <div class="max-w-lg mx-auto text-center mt-4 mb-4">
    <p class="text-white">
      Have an account? <a href="/login" class="font-bold hover:text-cyan-300">Login now</a>.
    </p>
  </div>

  <footer class="max-w-lg mx-auto flex justify-center text-white">
    <a href="/" class="hover:underline">Contact</a>
    <span class="mx-3">â€¢</span>
    <a href="/" class="hover:underline">Privacy</a>
  </footer>
</section>
