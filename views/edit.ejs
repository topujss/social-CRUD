<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include("./layouts/info") %>
      <hr />
      <%- include("./layouts/menu") %>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <% if (message) { %>
        <p class="text-red-500"><%= message %></p>
        <% } %>
        <h2>user profile information update</h2>
        <hr />
        <div class="form-wraper">
          <form action="/profile-edit" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input id="name" name="name" value="<%= user.name %>" type="text" />
            </div>
            <div class="form-group">
              <label for="userme">Username</label>
              <input id="userme" name="username" value="<%= user.username %>" type="text" />
            </div>
            <div class="form-group">
              <label for="locate">Location</label>
              <input id="locate" name="location" value="<%= user.location %>" type="text" />
            </div>
            <div class="form-group">
              <label for="ph">Phone number</label>
              <input id="ph" name="cell" value="<%= user.cell %>" type="text" />
            </div>
            <div class="form-group">
              <label for="ge">Gender</label>
              <input id="ge" name="gender" value="<%= user.gender %>" type="text" />
            </div>
            <div class="form-group">
              <button type="submit">Update profile</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
