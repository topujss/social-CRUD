<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include("./layouts/info") %>
      <hr />
      <%- include("./layouts/menu") %>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <h2>Change Password</h2>
        <hr />
        <div class="form-wraper">
          <form action="">
            <div class="form-group">
              <label for="old-me">Old Password</label>
              <input id="old-me" type="text" />
            </div>
            <div class="form-group">
              <label for="new-me">New Password</label>
              <input id="new-me" type="password" />
            </div>

            <div class="form-group">
              <label for="confirm-me">Confirm Password</label>
              <input id="confirm-me" type="password" />
            </div>
            <div class="form-group">
              <button>Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
